---
import starpodConfig from '../../starpod.config';
import { getShowInfo } from '../lib/rss';

const { supportPlatforms } = starpodConfig;

const show = await getShowInfo();
---

<h3 class="section-heading hidden pt-12 pb-6 lg:block">Sostienici</h3>

<div
  class="mt-16 flex items-center justify-center gap-6 lg:mt-0 lg:justify-start"
>
  {
    supportPlatforms?.patreon && (
      <a
        href={supportPlatforms.patreon}
      >
        <i class="fa-brands fa-patreon"></i>
      </a>
    )
  }
    {
      supportPlatforms?.koFi && (
        <a
          href={supportPlatforms.koFi}
        >
          <i class="fas fa-coffee"></i>
        </a>
      )
    }
  
</div>
